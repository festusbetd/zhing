<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme" parent="brand">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:colorForeground">@color/foreground_material_light</item>
        <item name="android:colorBackground">@drawable/side_nav_bar</item>
        <item name="android:textColorPrimary">?attr/colorBackgroundFloating</item>
    </style>

    <style name="OverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <!-- Required for pre-Lollipop. -->
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">4.0dip</item>
        <!-- Required for Lollipop. -->
        <item name="android:overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset" tools:ignore="DuplicateDefinition">4.0dip</item>
    </style>

    <style name="brand" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorActivatedHighlight</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:textColorPrimary">?android:attr/colorButtonNormal</item>
        <item name="colorPrimaryDark">@android:color/holo_red_dark</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
        <item name="android:itemTextAppearance">@style/brand.ItemTextStyle</item>
        <item name="android:textColorPrimaryInverse">@android:color/darker_gray</item>
    </style>


</resources>
